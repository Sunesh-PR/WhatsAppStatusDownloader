<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/whatsappbg">

    <TextView
        android:id="@+id/downloadfromheretext"
        android:layout_width="241dp"
        android:layout_height="47dp"
        android:gravity="center"
        android:text="Download the status desired using Whastapp Downloader"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.42" />

    <Button
        android:id="@+id/donwloadfrmhere"
        android:layout_width="279dp"
        android:layout_height="63dp"
        android:text="Download from WhatsApp Status Downloader"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/downloadfromheretext"
        app:layout_constraintVertical_bias="0.257" />
</android.support.constraint.ConstraintLayout>